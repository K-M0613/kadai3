<%= render 'list', user: @user, book: @new_book %>

<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
        <tbody>
            <tr>
                <td>
                    <%= image_tag @user.get_image(100,100) %><br>
                    <%= link_to @user.name, user_path(@user.id) %>
                </td>
                <td>
                    <%= link_to @book.title, book_path(@book.id) %>
                </td>
                <td>
                    <%= @book.body %>
                </td>
                <td>
                    <% if user_signed_in? %>
                      <% if @book.user == current_user %>
                        <%= link_to 'Edit', edit_book_path(@book.id),class:"btn btn-sm btn-success" %>
                      <% end %>
                    <% end %>
                </td>
                <td> <% if user_signed_in? %>
                      <% if @book.user == current_user %>
                        <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？",class:"btn btn-sm btn-danger" %>
                      <% end %>
                    <% end %>
                </td>
                <td>
                    <% if @book.favorited_by?(current_user) %>
                          <p>
                              <%= link_to book_favorites_path(@book), method: :delete do %>
                                ♥<%= @book.favorites.count %>
                              <% end %>
                          </p>
                          <% else %>
                          <p>
                              <%= link_to book_favorites_path(@book), method: :post do %>
                                ♡<%= @book.favorites.count %>
                              <% end %>
                          </p>
                    <% end %>
                </td>
                <td>
                    <p>コメント数:<%= @book.book_comments.count %></p>
                </td>
             </tr>
        </tbody>
    </table>
    <table>
        <% @book.book_comments.each do |book_comment| %>
            <tr>
                <td>
                      <p><%= image_tag book_comment.user.get_image(100,100) %></p>
                      <%= link_to user_path(@user.id) do %>
                        <%= book_comment.user.name %>
                      <% end %>
                </td>
                <td>
                  <%= book_comment.comment %>
                    <% if book_comment.user == current_user %>
                      <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete,class:"btn btn-sm btn-danger" %>
                    <% end %>

                </td>
            </tr>
            <% end %>
            <tr>
                <td>
                    <%= form_with model: [@book, @book_comment] do |f| %>
                      <%= f.text_area :comment, rows: '5', cols: '50' %><br>
                      <%= f.submit "送信" %>
                    <% end %>
                </td>
            </tr>


  </table>

</div>