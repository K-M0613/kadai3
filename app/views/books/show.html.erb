<%= render 'list', books: @books %>

<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
        <tbody>
            <tr>
                <td>
                    <%= image_tag @user.get_image(100,100) %><br>
                    <%= link_to @user.name, user_path(@user.id) %>
                </td>
                <td>
                    <%= link_to @book.title, book_path(@book.id) %>
                </td>
                <td>
                    <%= @book.body %>
                </td>
                <td>
                    <% if user_signed_in? %>
                      <% if current_user.id %>
                        <%= link_to 'edit', edit_book_path(@book.id) %>
                      <% end %>
                    <% end %>
                </td>
                <td> <% if user_signed_in? %>
                      <% if current_user.id %>
                        <%= link_to 'destroy', book_path(@book.id), method: :delete, "date-confirm" => "本当に消しますか？" %>
                      <% end %>
                    <% end %>
                </td>
            </tr>
        </tbody>
    </table>
</div>