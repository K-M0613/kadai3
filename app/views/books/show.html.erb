<%= render 'list', books: @books %>

<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
        <tbody>
            <tr>
                <td>
                    <%= image_tag @user.get_image(100,100) %><br>
                    <%= link_to @user.name, user_path(@user.id) %>
                </td>
                <td>
                    <%= @book.title %>
                </td>
                <td>
                    <%= @book.body %>
                </td>
            </tr>
        </tbody>
    </table>
</div>