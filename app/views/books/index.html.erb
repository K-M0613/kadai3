<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
        <% end %>
          </ul>
        <% end %>
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <%= image_tag @user.get_image(100,100) %>
              <th>name</th>
              <th><%= @user.name %></th>

            </tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tbody>
        </table>
        <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
        <% end %>
        <h2>New book</h2>
        <%= form_with model: @book, url: "/books", local: true do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>

              <th></th>
              <th>Title</th>

              <th>Opinion</th>

              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <td>
            <%= link_to user_path(book.user) do %>
            <%= image_tag book.user.get_image(100,100) %>
            <% end %>
            </td>
            <td><span><%= link_to book.title, book_path(book.id) %></span></td>
            <td><sapn><%= book.body %></sapn></td>
            
            <td>
                    <% if book.favorited_by?(current_user) %>
                          <p>
                              <%= link_to book_favorites_path(book.id), method: :delete do %>
                                ♥<%= book.favorites.count %>
                              <% end %>
                          </p>
                          <% else %>
                          <p>
                              <%= link_to book_favorites_path(book.id), method: :post do %>
                                ♡<%= book.favorites.count %>
                              <% end %>
                          </p>
                    <% end %>
            
            <td>
              <p><%= link_to "コメント数:#{book.book_comments.count}", book_path(book.id) %></p>
            </td>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
</div>