<%= render 'books/list', books: @books %>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tr>
      <td>
        <%= link_to @book.title, book_path(@book.id) %>
      </td>
      <td><%= book.body %></td>
    </tr>
  </table>
</div>